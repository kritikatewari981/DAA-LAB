#include<iostream>
using namespace std;
void selectionsort(int arr[],int range)
{
    int swaps=0,comparisons=0;
    int i,j;
    for(i=0;i<range-1;i++)
    {
        int min=i;
        for(j=i+1;j<range;j++)
        {
            comparisons++;
            if(arr[j]<arr[min])
            {
                min=j;
            }
        }
        if(min!=i)
        {
            int temp=arr[i];
            arr[i]=arr[min];
            arr[min]=temp;
            swaps++;
        }
    }
    cout<<"the comparison are"<<comparisons<<endl;
    cout<<"the swaps are"<<swaps<<endl;
}
int main()
{
    int t,i,n;
    cout<<"enter the test cases"<<endl;
    cin>>t;
    while(t--)
    {
        
        cout<<"enter size";
        cin>>n;
        int arr[n];
        cout<<"enter elements";
        for(i=0;i<n;i++)
        {
            cin>>arr[i];
        }
        selectionsort(arr,n);
        cout<<"sorted array is\n";
        for(i=0;i<n;i++)
        {
            cout<<arr[i]<<" ";
        }
        return 0;
    }
}
