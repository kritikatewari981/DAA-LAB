#include<iostream>
using namespace std;
void insertionsort(int arr[],int n)
{
    int i,j;
    int shift=0,compar=0;
    for(i=1;i<n;i++)
    {
        for(j=i;j>0;j--)
        {
            compar++;
            if(arr[j]<arr[j-1])
            {
                
                int temp=arr[j];
                arr[j]=arr[j-1];
                arr[j-1]=temp;
                shift++;
            }
            else
            {
                break;
            }
        }
    }
    cout<<"the shift is"<<shift<<endl;
    cout<<"the comparison are"<<compar<<endl;
    
    //printing sorted array
    for(i=0;i<n;i++)
    {
        cout<<arr[i]<<" ";
    }
}
int main()
{
    int arr[5]={12,33,45,67,90};
    int n=sizeof(arr)/sizeof(arr[0]);
    insertionsort(arr,n);
    return 0;
}
